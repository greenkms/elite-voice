<?xml version="1.0" encoding="utf-8" ?>
<Configuration>
  <Event name="LoadGame">
    <Randomize>
      <Block priority="1">
        <TextToSpeech voice="Anna" volume="50" pitch="10"/>
      </Block>
      <Block priority="2">
        <TextToSpeech voice="Irina" volume="50" pitch="10"/>
      </Block>
      <Block priority="3">
        <TextToSpeech voice="Elena" volume="50" pitch="10"/>
      </Block>
      <Block priority="4">
        <TextToSpeech voice="Aleksandr" volume="50" pitch="10"/>
      </Block>
    </Randomize>
    <Text>Добро пожаловать на борт! Командэр!</Text>
  </Event>
  <Event name="FSDJump">
    <TextToSpeech voice="Anna" volume="50" pitch="10">
      <Text>Прыжок совершон.</Text>
      <Pause value="500"/>
      <Text>Система: </Text>
      <Text select="StarSystem"/>
    </TextToSpeech>
  </Event>
  <Event name="SupercruiseEntry">
    <TextToSpeech voice="Anna" volume="50" pitch="10">
      <Text>Входим в суперкруиз.</Text>
    </TextToSpeech>
    <Play file="sound\dveri zakrivayutsya.wav" volume="20"/>
  </Event>
  <Event name="SupercruiseExit">
    <Play file="sound\dveri zakrivayutsya 2.wav" volume="20"/>
  </Event>
  <Event name="ReceiveText">
    <TextToSpeech voice="Anna" volume="50" pitch="10">
      <Text>Новое сообщение от</Text>
      <Pause value="100"/>
      <Text select="From_Localised"/>
      <Pause value="500"/>
      <Randomize>
        <Block priority="1">
          <TextToSpeech voice="Irina" volume="50" pitch="10"/>
        </Block>
        <Block priority="1">
          <TextToSpeech voice="Elena" volume="50" pitch="10"/>
        </Block>
        <Block priority="1">
          <TextToSpeech voice="Aleksandr" volume="50" pitch="10"/>
        </Block>
      </Randomize>
      <Text select="Message_Localised"/>
    </TextToSpeech>
  </Event>
</Configuration>
